        leafletButtons.forEach(button => {
            button.addEventListener('click', () => {
                const leafletType = button.getAttribute('data-leaflet');
                const leaflet = leafletData[leafletType];
                
                if (leaflet) {
                    leafletContent.innerHTML = `
                        <div class="flex justify-between items-center mb-6 no-print">
                            <h2 class="text-2xl font-bold text-primary">${leaflet.title}</h2>
                            <div>
                                <button onclick="window.print()" class="bg-primary hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">
                                    <i class="fas fa-print mr-2"></i>Cetak
                                </button>
                                <button onclick="closeLeaflet()" class="bg-slate-500 hover:bg-slate-600 text-white font-bold py-2 px-4 rounded">
                                    <i class="fas fa-times mr-2"></i>Tutup
                                </button>
                            </div>
                        </div>
                        ${leaflet.content}
                    `;
                    
                    leafletContent.classList.remove('hidden');
                    
                    // Scroll to leaflet content
                    leafletContent.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
        
        // Function to close leaflet (defined globally for onclick)
        window.closeLeaflet = function() {
            leafletContent.classList.add('hidden');
        };

        // Yoga Details Toggle
        const showYogaDetails = document.getElementById('show-yoga-details');
        const hideYogaDetails = document.getElementById('hide-yoga-details');
        const yogaDetails = document.getElementById('yoga-details');
        
        showYogaDetails.addEventListener('click', () => {
            yogaDetails.classList.remove('hidden');
            showYogaDetails.style.display = 'none';
        });
        
        hideYogaDetails.addEventListener('click', () => {
            yogaDetails.classList.add('hidden');
            showYogaDetails.style.display = 'block';
        });

        // Simulator Tekanan Darah
        const systolicValue = document.getElementById('systolic-value');
        const diastolicValue = document.getElementById('diastolic-value');
        const decreaseBp = document.getElementById('decrease-bp');
        const increaseBp = document.getElementById('increase-bp');
        const bpStatus = document.getElementById('bp-status');
        
        let systolic = 120;
        let diastolic = 80;
        
        function updateBpStatus() {
            if (systolic < 120 && diastolic < 80) {
                bpStatus.textContent = "Optimal";
                bpStatus.className = "text-center font-bold text-green-600";
            } else if (systolic < 130 && diastolic < 85) {
                bpStatus.textContent = "Normal";
                bpStatus.className = "text-center font-bold text-green-500";
            } else if (systolic < 140 && diastolic < 90) {
                bpStatus.textContent = "Normal Tinggi";
                bpStatus.className = "text-center font-bold text-yellow-500";
            } else if (systolic < 160 && diastolic < 100) {
                bpStatus.textContent = "Hipertensi Stadium 1";
                bpStatus.className = "text-center font-bold text-orange-500";
            } else if (systolic < 180 && diastolic < 110) {
                bpStatus.textContent = "Hipertensi Stadium 2";
                bpStatus.className = "text-center font-bold text-red-500";
            } else {
                bpStatus.textContent = "Hipertensi Krisis";
                bpStatus.className = "text-center font-bold text-red-700";
            }
        }
        
        decreaseBp.addEventListener('click', () => {
            systolic = Math.max(80, systolic - 5);
            diastolic = Math.max(50, diastolic - 3);
            systolicValue.textContent = systolic;
            diastolicValue.textContent = diastolic;
            updateBpStatus();
        });
        
        increaseBp.addEventListener('click', () => {
            systolic = Math.min(200, systolic + 5);
            diastolic = Math.min(130, diastolic + 3);
            systolicValue.textContent = systolic;
            diastolicValue.textContent = diastolic;
            updateBpStatus();
        });

        // Simulator Gula Darah Diabetes
        const carbsSlider = document.getElementById('carbs-slider');
        const carbsValue = document.getElementById('carbs-value');
        const exerciseSlider = document.getElementById('exercise-slider');
        const exerciseValue = document.getElementById('exercise-value');
        const simulateSugar = document.getElementById('simulate-sugar');
        const sugarResult = document.getElementById('sugar-result');
        const sugarLevel = document.getElementById('sugar-level');
        const sugarSuggestion = document.getElementById('sugar-suggestion');
        
        carbsSlider.addEventListener('input', () => {
            carbsValue.textContent = `${carbsSlider.value}g`;
        });
        
        exerciseSlider.addEventListener('input', () => {
            exerciseValue.textContent = `${exerciseSlider.value} menit`;
        });
        
        simulateSugar.addEventListener('click', () => {
            const carbs = parseInt(carbsSlider.value);
            const exercise = parseInt(exerciseSlider.value);
            
            // Simulasi sederhana: semakin banyak karbohidrat, semakin tinggi gula darah
            // Semakin banyak olahraga, semakin rendah gula darah
            let baseSugar = 90; // Gula darah dasar
            let sugar = baseSugar + (carbs * 0.5) - (exercise * 0.3);
            
            // Batasi dalam rentang yang realistis
            sugar = Math.max(70, Math.min(200, sugar));
            
            let suggestion;
            
            if (sugar < 100) {
                suggestion = "Kadar gula darah normal. Pertahankan pola makan dan aktivitas fisik Anda.";
            } else if (sugar < 126) {
                suggestion = "Kadar gula darah pra-diabetes. Perhatikan asupan karbohidrat dan tingkatkan aktivitas fisik.";
            } else {
                suggestion = "Kadar gula darah tinggi. Konsultasi dengan dokter dan terapkan pola makan yang terkontrol.";
            }
            
            sugarLevel.textContent = Math.round(sugar);
            sugarSuggestion.textContent = suggestion;
            sugarResult.classList.remove('hidden');
        });

        // Kalkulator Risiko TB Paru
        const tbRiskBtns = document.querySelectorAll('.risk-btn, .hiv-btn, .cough-btn');
        const calculateTbRisk = document.getElementById('calculate-tb-risk');
        const tbRiskResult = document.getElementById('tb-risk-result');
        const tbRiskLevel = document.getElementById('tb-risk-level');
        const tbRiskSuggestion = document.getElementById('tb-risk-suggestion');
        
        tbRiskBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const parentClass = btn.classList[0]; // risk-btn, hiv-btn, atau cough-btn
                const siblings = document.querySelectorAll(`.${parentClass}`);
                siblings.forEach(sibling => {
                    sibling.classList.remove('bg-amber-500', 'text-white');
                    sibling.classList.add('bg-slate-200', 'dark:bg-slate-700');
                });
                btn.classList.remove('bg-slate-200', 'dark:bg-slate-700');
                btn.classList.add('bg-amber-500', 'text-white');
            });
        });
        
        calculateTbRisk.addEventListener('click', () => {
            const contact = document.querySelector('.risk-btn.bg-amber-500')?.dataset.risk === 'yes';
            const hiv = document.querySelector('.hiv-btn.bg-amber-500')?.dataset.hiv === 'positive';
            const cough = document.querySelector('.cough-btn.bg-amber-500')?.dataset.cough === 'yes';
            
            let riskScore = 0;
            
            if (contact) riskScore += 3;
            if (hiv) riskScore += 4;
            if (cough) riskScore += 3;
            
            let level, suggestion;
            
            if (riskScore <= 2) {
                level = "Rendah";
                suggestion = "Risiko TB rendah. Pertahankan gaya hidup sehat dan sistem imun yang baik.";
            } else if (riskScore <= 5) {
                level = "Sedang";
                suggestion = "Risiko TB sedang. Perhatikan gejala dan lakukan pemeriksaan jika diperlukan.";
            } else {
                level = "Tinggi";
                suggestion = "Risiko TB tinggi. Segera konsultasi dengan dokter untuk pemeriksaan lebih lanjut.";
            }
            
            tbRiskLevel.textContent = level;
            tbRiskSuggestion.textContent = suggestion;
            tbRiskResult.classList.remove('hidden');
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in-up');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);
        
        // Observe elements for animation
        document.querySelectorAll('.grid > div, .flex > div').forEach((el) => {
            observer.observe(el);
        });
    </script>
</body>
</html>
